extends layout

block content
  .container
    h1 Login
    hr
    form(method='post', action='/users/login')
      .form-group
        label= 'Email Address'
        input.form-control(type='email', name='email', placeholder='Email Address')
      .form-group
        label= 'Password'
        input.form-control(type='text', name='password', placeholder='Password')
      button.btn.btn-default(type='submit') Login