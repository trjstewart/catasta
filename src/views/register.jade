extends layout

block content
  .container
    h1 Register
    hr

    if (errors)
      each error in errors
        .alert.alert-danger= error.msg

    if (email)
      .alert.alert-success= email

    form(method='post', action='/users/register')
      .form-group
        label= 'Email Address'
        input.form-control(type='email', name='email', placeholder='Email Address')
      .form-group
        label= 'Password'
        input.form-control(type='password',name='password', placeholder='Password')
      .form-group
        label= 'Comfirm Password'
        input.form-control(type='password',name='confirm_password', placeholder='Comfirm Password')
      button.btn.btn-default(type='submit') Register